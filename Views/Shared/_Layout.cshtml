    <script>
        $(document).ready(function () {
            $(".navbar-brand").click(function (event) {
                event.preventDefault(); // Prevent default anchor behavior
                window.location.href = "/Register/Create"; // Navigate using the correct MVC route
            });
        });

    </script>

    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
            /*background-image: url('../../images/4.jpg');*/
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100%;
            background-position: center;
        }

        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }

        .container.body-content{
            background-color:none !important;
        }
        /* Navbar Styles */
        .navbar {
            background-color: #343a40;
        }

        .navbar-brand {
            font-size: 1.5em;
            color: #ffd700 !important;
        }

        .navbar-nav .nav-link {
            color: #ddd !important;
            font-size: 1.2em;
        }

            .navbar-nav .nav-link:hover {
                color: #ffd700 !important;
            }

        .navbar-toggler {
            border: none;
        }

        /* Footer Styles */
        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 20px 0;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px;
        }

        .footer-section {
            flex: 1;
            padding: 10px;
            min-width: 200px;
        }

            .footer-section h3 {
                margin-bottom: 15px;
            }

            .footer-section p,
            .footer-section ul,
            .footer-section form {
                margin: 0;
                padding: 0;
            }

            .footer-section ul {
                list-style: none;
            }

                .footer-section ul li {
                    margin-bottom: 10px;
                }

                    .footer-section ul li a {
                        color: #ffd700;
                        text-decoration: none;
                    }

                        .footer-section ul li a:hover {
                            text-decoration: underline;
                        }

            .footer-section form input[type="email"] {
                padding: 10px;
                width: calc(100% - 22px);
                margin-bottom: 10px;
            }

            .footer-section form button {
                padding: 10px 20px;
                background-color: #f2d00f;
                border: none;
                color: black;
                cursor: pointer;
            }

                .footer-section form button:hover {
                    background-color: #0ff73d;
                    color:white;
                }

        footer img {
            width: 20px;
            margin: 0 5px;
        }

        footer p {
            margin-top: 20px;
        }

    </style>
</head>
